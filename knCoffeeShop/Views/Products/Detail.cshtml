@model knCoffeeShop.Models.Product // Khai báo rằng View này sẽ nhận một đối tượng Product duy nhất

@{
    ViewData["Title"] = Model?.Name + " Details"; // Đặt tiêu đề trang động
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model?.ImageUrl" class="img-fluid rounded shadow-sm" alt="@Model?.Name">
        </div>
        <div class="col-md-6">
            <h1>@Model?.Name</h1>
            <p class="lead">@Model?.Detail</p>
            <h3 class="text-primary">@Model?.Price.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))</h3>
            <hr />
            <p>
                @if (Model != null && Model.IsTrendingProduct) // Kiểm tra nếu là sản phẩm nổi bật
                {
                    <span class="badge bg-warning text-dark me-2">Trending Product</span>
                }
                <span class="badge bg-info">ID: @Model?.Id</span>
            </p>
            <a asp-controller="Products" asp-action="Shop" class="btn btn-secondary mt-3">Back to Shop</a>
        </div>
    </div>
</div>